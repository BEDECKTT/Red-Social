@{
    ViewData["Title"] = "Notificaciones";
}

<h2>Notificaciones</h2>

@(Html.DevExtreme().DataGrid<AppDevextreme.Models.Notificacion>()
    .DataSource(ds => ds.WebApi()
        .Controller("SampleData")
        .LoadAction("Get")
        .InsertAction("Post")
        .UpdateAction("Put")
        .DeleteAction("Delete")
        .Key("Id")
    )
    .RemoteOperations(true)
    .Columns(columns => {

        columns.AddFor(m => m.Id);

        columns.AddFor(m => m.Tipo);

        columns.AddFor(m => m.Contenido);

        columns.AddFor(m => m.FechaNotificacion);
    })
    .Editing(e => e
        .AllowAdding(true)
        .AllowUpdating(true)
        .AllowDeleting(true)
    )
)
